
@{
    ViewBag.Title = "ListGoodlaps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListGoodlaps</h2>
@Html.ActionLink("Create", "Create", new { @class = "btn btn-default" })
<div class=" row">

    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 ">
            <div class=" panel panel-default">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "pull-right" })
                <div class="panel panel-heading">@item.Title</div>
                <div class="panel-body">
                    <p>
                        <strong>Author: </strong> @item.Author
                    </p>
                    <p>
                        <strong> Public Year :</strong> @item.PublicYear
                    <p>
                        <strong> Price L</strong> @item.Price
                    </p>

                    <img src="/@item.Cover" alt="hinh thumnail qua xin xo" class="img-fluid" style="width:100%;height:200px;" />

                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <a href="# " class="btn btn-primary"> Order </a>
                        @Html.ActionLink("Read more.....", "Detail", new { id = item.Id }, new { @class = "btn btn-default" })

                    </div>
                </div>
            </div>
        </div>
    }
</div>


